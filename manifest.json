{
  "manifest_version": 3,
  "name": "ClipSafe - Sensitive Data Protector",
  "version": "1.0.0",
  "description": "Protects sensitive data by automatically detecting and sanitizing API keys, passwords, and emails when pasting into AI chats.",
  "author": "Ebishdon",
  "homepage_url": "https://github.com/ebishdon/clipsafe",
  "icons": {
    "16": "clipsafe.png",
    "32": "clipsafe.png",
    "48": "clipsafe.png",
    "128": "clipsafe.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://bard.google.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://claude.ai/chat/*",
    "https://claude.ai/chat/new/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://poe.com/*",
    "https://www.poe.com/*",
    "https://huggingface.co/chat/*",
    "https://chat.huggingface.co/*",
    "https://you.com/*",
    "https://www.you.com/*",
    "https://bing.com/chat/*",
    "https://www.bing.com/chat/*",
    "https://copilot.microsoft.com/*",
    "https://www.copilot.microsoft.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://www.poe.com/*",
        "https://huggingface.co/chat/*",
        "https://chat.huggingface.co/*",
        "https://you.com/*",
        "https://www.you.com/*",
        "https://bing.com/chat/*",
        "https://www.bing.com/chat/*",
        "https://copilot.microsoft.com/*",
        "https://www.copilot.microsoft.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClipSafe - Protect Sensitive Data",
    "default_icon": {
      "16": "clipsafe.png",
      "32": "clipsafe.png",
      "48": "clipsafe.png",
      "128": "clipsafe.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["clipsafe.png"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://poe.com/*",
        "https://www.poe.com/*",
        "https://huggingface.co/*",
        "https://chat.huggingface.co/*",
        "https://you.com/*",
        "https://www.you.com/*",
        "https://bing.com/*",
        "https://www.bing.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.copilot.microsoft.com/*"
      ]
    }
  ],
  "minimum_chrome_version": "88",
  "offline_enabled": true,
  "incognito": "split"
}